<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    tools:context=".MainClientActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" android:layout_marginTop="30dp"
        android:id="@+id/constrainLayout_Profile">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cicleImageView_Profile2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toTopOf="@id/imageView_Profile"
            android:layout_marginRight="25dp"
            android:src="@drawable/voy2"
            app:layout_constraintRight_toRightOf="parent" />
        <ImageView
            android:id="@+id/imageView_Profile"
            app:layout_constraintTop_toBottomOf="@id/cicleImageView_Profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="25dp"
            android:layout_width="35dp"
            android:padding="4dp"
            android:layout_height="20dp"
            android:clickable="true"
            android:src="@drawable/triangle"></ImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cicleImageView_Profile"
            android:layout_width="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent"
            android:src="@drawable/voy2"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="13dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="18dp"
            android:textColor="#fff"
            android:id="@+id/textView_Profile_name"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/cicleImageView_Profile"
            android:layout_height="0dp"
            android:text="User Name" />

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView_Profile_name"
            android:textSize="13dp"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:id="@+id/textView_Profile_first"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/cicleImageView_Profile"
            android:layout_height="0dp"
            android:text="prenom de l'utilisteur" />

    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:paddingBottom="15dp"
        android:id="@+id/linearLayout_Menu"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout_MenuGauche"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_Abonement"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clickable="true"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                app:cardElevation="7dp"
                android:layout_weight="1">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/constraintLayout_Abonement"
                    android:clickable="true"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_Abonement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Abonnement"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/imageView_Abonement"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imageView_Abonement"
                        android:layout_width="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/suscription"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_Abonement"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:id="@+id/textView_AbonementNum"
                        android:layout_height="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="15dp"
                        android:paddingTop="1dp"
                        android:textSize="11dp"
                        android:layout_marginTop="2dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:text="2"
                        android:background="@drawable/notification_bg"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_ActiviteRecente"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="5dp"
                android:clickable="true"
                app:cardElevation="7dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:id="@+id/constraintLayout_ActiviteRecente"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_ActiviteRecente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Récents"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/imageView_ActiviteRecente"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/imageView_ActiviteRecente"
                    android:layout_width="match_parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/recent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_ActiviteRecente"
                    />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_NoteAvis"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="5dp"
                android:clickable="true"
                android:layout_marginVertical="5dp"
                app:cardElevation="7dp"
                android:layout_weight="1">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:id="@+id/constraintLayout_NoteAvis"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_NoteAvis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Notes &amp; \n avis"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/imageView_NoteAvis"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imageView_NoteAvis"
                        android:layout_width="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/rate"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_NoteAvis"
                        />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/linearLayout_MenuCenter"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/cardView_Planning"
                android:layout_height="0dp"
                app:cardElevation="7dp"

                android:clickable="true"
                android:layout_weight="1">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/constraintLayout_Planning"
                    android:clickable="true"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textView_Planning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Plannings"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/imageView_Planning"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imageView_Planning"
                        android:layout_width="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/planning"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_Planning"
                        />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:clickable="true"
                android:id="@+id/cardView_Notification"
                android:layout_height="0dp"
                app:cardElevation="7dp"
                android:layout_weight="1">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/constraintLayout_Notification"
                    android:clickable="true"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textView_Notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Notifications"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/imageView_Notification"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imageView_Notification"
                        android:layout_width="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/notify"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_Notification"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:id="@+id/textView_NotificationNum"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toBottomOf="@id/textView_Notification"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="15dp"
                        android:paddingTop="1dp"
                        android:textSize="11dp"
                        android:layout_marginTop="2dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:text="9"
                        android:background="@drawable/notification_bg"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/cardView_Parametre"
                android:clickable="true"
                app:cardElevation="7dp"
                android:layout_height="0dp"
                android:layout_weight="1">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/constraintLayout_Parametre"
                    android:clickable="true"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_Parametre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Paramètres"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/imageView_Parametre"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imageView_Parametre"
                        android:layout_width="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/setting"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_Parametre"
                        />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout_MenuDroite"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/cardView_Panier"
                android:clickable="true"
                app:cardElevation="7dp"
                android:layout_height="0dp"
                android:layout_weight="1">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/constraintLayout_Panier"
                    android:clickable="true"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_Panier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Mon Panier"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/imageView_Panier"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imageView_Panier"
                        android:layout_width="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/panier"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_Panier"
                        />

                    <TextView
                        android:id="@+id/textView_PanierNum"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/notification_bg"
                        android:paddingTop="1dp"
                        android:text="4"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/cardView_Signaler"
                android:clickable="true"
                android:layout_height="0dp"
                app:cardElevation="7dp"
                android:layout_weight="1">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/constraintLayout_Signaler"
                    android:clickable="true"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_Signaler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Signaler"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/imageView_Signaler"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imageView_Signaler"
                        android:layout_width="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/signal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_Signaler"
                        />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:clickable="true"
                android:id="@+id/cardView_Help"
                android:layout_height="0dp"
                app:cardElevation="7dp"
                android:layout_weight="1">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:id="@+id/constraintLayout_Help"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_Help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Aide"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/imageView_Help"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/imageView_Help"
                        android:layout_width="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/help"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_Help"
                        />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>